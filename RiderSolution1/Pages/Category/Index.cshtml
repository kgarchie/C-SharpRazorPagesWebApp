@model IEnumerable<RiderSolution1.Models.Category>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewBag.Title = "Category";
    Layout = "_Layout";
}

<div class="mt-1 container">
    <div class="myFlex">
        <div>
            <h2 class="text-primary">Category List</h2>
        </div>
        <div>
            <a class="btn btn-primary" asp-area="" asp-controller="Category" asp-action="Create"><i class="bi bi-patch-plus"></i> &nbsp; Add Category</a>
        </div>
    </div>
    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
        <tr><td>Category Name</td><td>Display Order</td><td>Edit Link</td></tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr><td>@item.Name</td><td>@item.DisplayOrder</td><td><div class="w-75 btn-group" role="group"><a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a></div></td></tr>
        }
        </tbody>
    </table>
</div>

<style>
    .myFlex{
        display: flex;
        justify-content: space-between;
        width: 100%;
        margin-bottom: 1rem;
        margin-top: 1rem;
    }
</style>